@model RegisterUserViewModel;

<h1>User Registeration</h1>
<br/>
<div class="comntainer border" style="padding:20px;">
    <form asp-action="RegisterUser" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Department"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Department" class="form-control" />
                <span class="text-danger" asp-validation-for="Department"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="Position"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Position" class="form-control" />
                <span class="text-danger" asp-validation-for="Position"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-5">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>

    </form>
</div>
