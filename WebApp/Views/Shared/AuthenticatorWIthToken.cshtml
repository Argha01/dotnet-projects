@model AuthenticatorMFAViewModel
<h1>Please enter the code to your authenticator app.</h1>
<form asp-action="AuthenticatorSignIn" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group mb-3 row">
        <div class="col-2">
            <label asp-for="SecurityCode"></label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="SecurityCode" class="form-control" />
            <span class="text-danger" asp-validation-for="SecurityCode"></span>
        </div>
    </div>
    <div class="form-group mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Verify" />
        </div>
        <div class="col-2">
            <input type="hidden" asp-for="RememberMe" />
        </div>
    </div>
</form>
