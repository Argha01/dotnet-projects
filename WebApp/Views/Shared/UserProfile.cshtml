@model UserProfileViewModel;

<h1>User Profile</h1>
<br />
<div class="comntainer border" style="padding:20px;">
    <form asp-action="SaveUserProfile" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group mb-3 row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <div class="col-2">
                <label asp-for="Department"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Department" class="form-control" />
                <span class="text-danger" asp-validation-for="Department"></span>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <div class="col-2">
                <label asp-for="Position"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Position" class="form-control" />
                <span class="text-danger" asp-validation-for="Position"></span>
            </div>
        </div>
        <div class="form-group mb-3 row">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" asp-for="EnableTwoFactorAuth" />
                <label class="form-check-label" asp-for="EnableTwoFactorAuth"></label>
            </div>
            <div class="col-5">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>

    </form>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}